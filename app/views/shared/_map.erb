var map = L.map('map', {
  center: <%= @center %>,
  zoom: <%= @zoom %>,
  zoomControl: false,
  minZoom: 4,
  maxZoom: 10,
  attributionControl: false,
  scrollWheelZoom: false
});

L.control.zoom({ position: 'topright' }).addTo(map);
L.tileLayer("https://api.mapbox.com/styles/v1/<%= @tile %>/tiles/256/{z}/{x}/{y}?access_token=<%= ENV['MAPBOX_API_KEY'] %>")
.addTo(map);

var marker = L.icon({
  iconUrl: '<%= image_path("marker-#{@marker}.svg") %>',
  iconSize: [30, 48],
  iconAnchor: [15, 48],
  riseOnHOver: true
});
